<div class="container">
  <div class="row"> 
    <div class="col-sm">
      <br/>
      <p>List visit:</p>
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Phone</th>
            <th scope="col">date - time</th>
            <th scope="col">Barber</th>
            <th scope="col">Barber phone</th>
            <th scope="col">Color</th>
          </tr>
        </thead>
        <tbody>
          <% @visits.each do |visit| %>
            <% visit_client = Client.find visit.client_id %>
            <% visit_barber = Barber.find visit.barber_id %>
            <tr>
              <td><%=visit_client.name%></td>
              <td><%=visit_client.phone%></td>
              <td><%=visit.date_time%></td>
              <td><%=visit_barber.name%></td>
              <td><%=visit_barber.phone%></td>
              <td style="background-color: <%=visit.colorpicker%>"><%=visit.colorpicker%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-sm">
      add barber:
      <form action="/admin" method="POST">
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">Name</span>
          </div>
          <input type="text" name="barber[name]" value="<%=@b.name%>" placeholder="Name" class="form-control" aria-label="Barber name" aria-describedby="basic-addon1">
        </div>
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">Phone</span>
          </div>
          <input type="text" name="barber[phone]" value="<%=@b.phone%>" class="form-control" placeholder="+7 (***) ***-**-**" aria-label="Barber phone" aria-describedby="basic-addon1">
        </div>
        <button type="submit" class="btn btn-primary">Add barber</button>
      </form>
      <br>
      <h2>
        <span class="bd-content-title">List barbers:<a class="anchorjs-link " href="#basic-example" aria-label="Anchor" data-anchorjs-icon="#" style="padding-left: 0.375em;"></a></span>
      </h2>
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Phone</th>
          </tr>
        </thead>
        <tbody>
          <% @barbers.each do |barber| %>
            <tr>
              <td><%=barber.name%></td>
              <td><%=barber.phone%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
